@model IEnumerable<CarSeller.Models.Owner>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Name</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Cars</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var owner in Model)
        {
            <tr>
                <td>@owner.Name</td>
                <td>
                    @foreach (var car in owner.Cars)
                    {
                        <div>@car.Brand (@car.Year)</div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
